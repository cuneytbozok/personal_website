---
import { siteConfig } from '../config';
---

<nav
  class="fixed left-0 right-0 top-0 z-40 flex items-center justify-between border-b border-border bg-bg/90 px-6 py-4 backdrop-blur-md"
  aria-label="Main navigation"
>
  <a href="/" class="font-mono text-sm font-medium text-text">
    {siteConfig.name}
  </a>

  <ul class="hidden items-center gap-8 md:flex" role="list">
    {
      siteConfig.navLinks.map(({ name, url, number }) => (
        <li>
          <a
            href={url}
            class="font-mono text-sm text-text-muted transition-colors hover:text-accent focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-bg"
          >
            <span class="text-accent">{number}.</span> {name}
          </a>
        </li>
      ))
    }
  </ul>

  <a
    href={siteConfig.resumeUrl}
    download="Cuneyt_Bozok_Resume.pdf"
    class="hidden rounded border border-accent px-4 py-2 font-mono text-sm text-accent transition-colors hover:bg-accent/10 md:inline-block focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 focus:ring-offset-bg"
  >
    Resume
  </a>

  <!-- Hamburger toggle for mobile - target controlled by Menu -->
  <button
    id="menu-toggle"
    type="button"
    class="flex h-10 w-10 items-center justify-center rounded lg:hidden"
    aria-expanded="false"
    aria-controls="mobile-menu"
    aria-label="Open menu"
  >
    <svg
      class="h-6 w-6 text-text"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
      aria-hidden="true"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16"
      />
    </svg>
  </button>
</nav>
