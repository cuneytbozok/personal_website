---
interface Props {
  title: string;
  label: string;
  description: string;
  tech: string[];
  imageSrc: string;
  imageAlt: string;
  repoUrl?: string;
  liveUrl?: string;
}

const { title, label, description, tech, imageSrc, imageAlt, repoUrl, liveUrl } = Astro.props;
---

<article
  class="featured-project group relative grid gap-8 lg:grid-cols-12 lg:items-center"
  style={`--fp-image: url('${imageSrc}')`}
>
  <span class="sr-only">{imageAlt}</span>

  <div class="featured-project__media lg:col-span-7" aria-hidden="true">
    <div class="featured-project__media-overlay" aria-hidden="true"></div>
    <img src={imageSrc} alt={imageAlt} loading="lazy" />
    <div class="featured-project__media-tint" aria-hidden="true"></div>
  </div>

  <div class="featured-project__content lg:col-span-5 lg:-ml-12 lg:relative lg:z-10">
    <p class="text-left font-mono text-xs uppercase tracking-[0.2em] text-accent lg:text-right">
      {label}
    </p>
    <h4 class="mt-3 text-left text-2xl font-semibold text-text group-hover:text-accent lg:text-right">
      {title}
    </h4>
    <div class="mt-4 rounded-lg border border-transparent bg-transparent p-6 text-sm text-text-muted shadow-none lg:border-border lg:bg-surface-2 lg:shadow-lg lg:shadow-accent/5">
      <p>{description}</p>
      <ul class="mt-4 flex flex-wrap gap-3 font-mono text-xs text-text-dimmer lg:justify-end">
        {tech.map((techItem) => (
          <li>{techItem}</li>
        ))}
      </ul>
    </div>
    <div class="mt-4 flex items-center gap-4 lg:justify-end">
      {repoUrl && (
        <a
          href={repoUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-accent transition-colors hover:text-accent-hover"
          aria-label={`View ${title} on GitHub`}
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
          </svg>
        </a>
      )}
      {liveUrl && (
        <a
          href={liveUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="text-accent transition-colors hover:text-accent-hover"
          aria-label={`Open ${title} live site`}
        >
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
            />
          </svg>
        </a>
      )}
    </div>
  </div>
</article>
