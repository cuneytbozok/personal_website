---
import SectionHeader from './SectionHeader.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const featuredProjects = allProjects.filter((p) => p.data.featured);
const otherProjects = allProjects.filter((p) => !p.data.featured);
---

<section
  id="projects"
  class="section-fade mx-auto max-w-5xl px-6 py-24 lg:py-36"
  aria-labelledby="projects-heading"
>
  <SectionHeader number="03" title="Work" />

  <div class="space-y-16">
    <div class="space-y-12">
      {
        featuredProjects.map((project) => (
          <article
            class="group relative rounded-lg border border-border bg-surface-1 p-6 transition-all hover:-translate-y-1 hover:shadow-lg hover:shadow-accent/5 lg:p-8"
          >
            <div class="flex flex-col gap-4 lg:flex-row lg:justify-between">
              <div>
                <h3 class="text-xl font-semibold text-text group-hover:text-accent">
                  {project.data.title}
                </h3>
                <p class="mt-2 text-text-muted">{project.data.description}</p>
                <ul class="mt-4 flex flex-wrap gap-3 font-mono text-sm text-text-dimmer">
                  {
                    project.data.tech.map((t) => (
                      <li>{t}</li>
                    ))
                  }
                </ul>
              </div>
              <div class="flex gap-4">
                {project.data.github && (
                  <a
                    href={project.data.github}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-accent transition-colors hover:text-accent-hover"
                    aria-label="View on GitHub"
                  >
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z" />
                    </svg>
                  </a>
                )}
                {project.data.external && (
                  <a
                    href={project.data.external}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-accent transition-colors hover:text-accent-hover"
                    aria-label="External link"
                  >
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
              </div>
            </div>
          </article>
        ))
      }
    </div>

    {otherProjects.length > 0 && (
      <div>
        <h3 class="mb-8 font-mono text-sm text-accent">Other Noteworthy Projects</h3>
        <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
          {
            otherProjects.map((project) => (
              <article
                class="rounded-lg border border-border bg-surface-1 p-6 transition-all hover:-translate-y-1 hover:shadow-lg hover:shadow-accent/5"
              >
                <h4 class="font-semibold text-text">{project.data.title}</h4>
                <p class="mt-2 text-sm text-text-muted">{project.data.description}</p>
                <ul class="mt-3 flex flex-wrap gap-2 font-mono text-xs text-text-dimmer">
                  {
                    project.data.tech.map((t) => (
                      <li>{t}</li>
                    ))
                  }
                </ul>
              </article>
            ))
          }
        </div>
      </div>
    )}
  </div>
</section>
